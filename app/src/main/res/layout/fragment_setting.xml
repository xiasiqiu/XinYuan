<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/view_header_tv_msg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_user_head"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_white"
            android:padding="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/customer_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/RegularTextView"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/customer_image"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/bt_setting_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:drawableRight="@drawable/ic_right_row"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="管理收货地址"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Regular"/>


        <Button
            android:id="@+id/bt_setting_security"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1px"
            android:background="@color/bg_white"
            android:drawableRight="@drawable/ic_right_row"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="账户与安全"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Regular"/>


        <Button
            android:id="@+id/bt_setting_cache"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@color/bg_white"
            android:drawableRight="@drawable/ic_right_row"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="清理图片缓存"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Regular"/>


        <Button
            android:id="@+id/bt_setting_sugges"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:layout_marginTop="1px"
            android:drawableRight="@drawable/ic_right_row"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="意见反馈"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Regular"/>

        <Button
            android:id="@+id/bt_setting_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:layout_marginTop="1px"
            android:drawableRight="@drawable/ic_right_row"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关于我们"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Regular"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/bt_selected_fang"
        android:text="退出登录"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/tv_Normal"/>

</LinearLayout>