<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/bg_white"
    android:elevation="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/rg_good_select"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_comm_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/good_show"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="综合排序"
            android:textColor="@drawable/text_btn_color"
            android:textSize="@dimen/tv_Regular"/>


        <RadioButton
            android:id="@+id/rb_sell_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="销量优先"
            android:textColor="@drawable/text_btn_color"
            android:textSize="@dimen/tv_Regular"/>


        <RadioButton
            android:id="@+id/rb_filter_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/good_show"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="筛选"
            android:textColor="@drawable/text_btn_color"
            android:textSize="@dimen/tv_Regular"/>
    </RadioGroup>


    <FrameLayout
        android:id="@+id/flListType"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/btnListType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_white"
            android:src="@drawable/btn_goods_list_type"/>
    </FrameLayout>
</LinearLayout>
