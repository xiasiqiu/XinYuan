<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1px"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/ivGoodPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_goods_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparency_B"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3dp"
            android:padding="10dp"
            android:text="5天3小时后结束"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_light"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_goods_name"
            style="@style/GoodsNameTextView"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3dp"
            android:text="【AVON雅芳】美容SPA养生馆钟大夫365元办年卡"/>

        <TextView
            android:id="@+id/tv_goods_price"
            style="@style/GoodsPriceTextView"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginTop="8dp"
            android:text="团购价 ¥515"
            />

        <TextView
            android:id="@+id/tv_goods_sellnum"
            style="@style/LightTextView"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_goods_price"
            android:text="2456人已团"
            android:textColor="@color/tv_hint"
            />
    </RelativeLayout>

</LinearLayout>