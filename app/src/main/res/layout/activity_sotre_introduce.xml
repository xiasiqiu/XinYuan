<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_header_tv_msg" />


    <RelativeLayout
        android:id="@+id/rl_store_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@color/bg_white"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_store_logo"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tv_store_name"
            style="@style/RegularTextView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_store_logo" />


        <TextView
            android:id="@+id/tv_store_level"
            style="@style/LightTextView"
            android:layout_below="@id/tv_store_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_store_credit" />

        <ImageView
            android:id="@+id/iv_store_credit"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/tv_store_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_store_logo" />

        <TextView
            android:id="@+id/tv_store_type"
            style="@style/LightHintTextView"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_store_logo" />

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">

            <CheckBox
                android:id="@+id/bt_store_fav"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_bg_dark"
                android:button="@null"
                android:gravity="center"
                android:text="+ 关注"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/tv_light" />

            <TextView
                android:id="@+id/tv_store_fans"
                style="@style/SmallHintTextView"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/bt_store_fav" />


            <TextView
                style="@style/SmallHintTextView"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/bt_store_fav"
                android:text="粉丝数" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@id/bt_store_fav"
                android:background="@color/colorLine" />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/bg_white"
        android:padding="10dp">

        <TextView
            style="@style/RegularTextView"
            android:text="描述相符" />

        <TextView
            android:id="@+id/tv_store_score"
            style="@style/RegularTextView"
            android:layout_marginLeft="50dp"

            android:textColor="@color/tv_price" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="10dp">

        <TextView
            style="@style/RegularTextView"

            android:text="服务态度" />

        <TextView
            android:id="@+id/tv_store_service_score"
            style="@style/RegularTextView"
            android:layout_marginLeft="50dp"

            android:textColor="@color/tv_price" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="10dp">

        <TextView
            style="@style/RegularTextView"

            android:text="物流服务" />

        <TextView
            android:id="@+id/tv_store_express_score"
            style="@style/RegularTextView"
            android:layout_marginLeft="50dp"

            android:textColor="@color/tv_price" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white"
        android:padding="10dp">

        <TextView
            style="@style/RegularTextView"
            android:text="店铺名称" />

        <TextView
            android:id="@+id/tv_store_name2"
            style="@style/RegularTextView"
            android:layout_marginLeft="50dp"
            android:textColor="@color/tv_hint" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="10dp">

        <TextView
            style="@style/RegularTextView"
            android:text="店铺地址" />

        <TextView
            android:id="@+id/tv_store_location"
            style="@style/RegularTextView"
            android:layout_marginLeft="50dp"

            android:textColor="@color/tv_hint" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="10dp">

        <TextView
            style="@style/RegularTextView"
            android:text="开店时间" />

        <TextView
            android:id="@+id/tv_store_createTime"
            style="@style/RegularTextView"
            android:layout_marginLeft="50dp"

            android:textColor="@color/tv_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white"
        android:padding="10dp">

        <TextView
            style="@style/RegularTextView"
            android:text="联系电话" />

        <TextView
            android:id="@+id/tv_store_phone"
            style="@style/RegularTextView"
            android:layout_marginLeft="50dp"

            android:textColor="@color/tv_hint" />
    </LinearLayout>


</LinearLayout>