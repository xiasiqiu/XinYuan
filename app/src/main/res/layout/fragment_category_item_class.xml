<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvLine"
        style="@style/Line"/>

    <RelativeLayout
        android:id="@+id/rlGoodClass"
        android:layout_width="fill_parent"
        android:layout_height="28dp">

        <ImageView
            android:id="@+id/tvGoodsClassDot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/nc_sharp_dot2"/>

        <TextView
            android:id="@+id/tvGoodsClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:textSize="@dimen/tv_Normal"
            android:textColor="@color/tv_name"/>

    </RelativeLayout>

    <com.xinyuan.xyshop.widget.MyGridView
        android:id="@+id/gvGoodsClass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:isScrollContainer="false"
        android:numColumns="3"
        android:verticalSpacing="5dp"/>
</LinearLayout>