<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="3dp"
                android:background="@color/bg_white"
                android:padding="10dp">

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/RegularTextView"/>

    <TextView
        android:id="@+id/tv_user_phone"
        style="@style/LightTextView"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_address"
        style="@style/LightTextView"
        android:layout_below="@id/tv_user_name"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/tv_hint"/>


    <CheckBox
        android:id="@+id/address_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/checkbox_selector"
        android:button="@null"/>

    <TextView
        android:id="@+id/tv_a"
        style="@style/LightTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/address_checkbox"
        android:text="默认地址"
        android:textColor="@color/tv_hint"/>


    <Button
        android:id="@+id/bt_address_edit"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_edite"
        android:text="编辑"
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_Normal"/>

    <Button
        android:id="@+id/bt_address_delete"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/bt_address_edit"
        android:background="@null"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_address_delte"
        android:text="删除"
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_Normal"/>

</RelativeLayout>