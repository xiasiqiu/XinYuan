<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/bg_white">

    <CheckBox
        android:id="@+id/chekbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_follow_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/chekbox" />

    <TextView
        android:id="@+id/tv_follow_name"
        style="@style/RegularTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_follow_img" />

    <ImageView
        android:id="@+id/iv_store_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/tv_follow_name" />

    <TextView
        android:id="@+id/tv_store_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_follow_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_follow_img" />


    <Button
        android:id="@+id/bt_store"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/button__n_bg"
        android:text="进店"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/tv_Normal" />

</RelativeLayout>