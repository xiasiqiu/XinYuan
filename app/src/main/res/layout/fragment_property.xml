<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_gray"
              android:orientation="vertical">

    <include layout="@layout/view_header_tv_msg"/>

    <RelativeLayout
        android:id="@+id/rl_pro_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/iv_pro_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_mine_money1"/>

        <TextView
            android:id="@+id/tv_pro_account"
            style="@style/RegularTextView"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:text="账户余额"/>

        <TextView
            android:id="@+id/tv_pro_count_hint"
            style="@style/NormalHintTextView"
            android:layout_below="@id/tv_pro_account"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:text="预存款账户余额，充值及提现明细"/>

        <TextView
            android:id="@+id/tv_pro_account_num"
            style="@style/NormalTextView"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:textColor="@color/tv_hint"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_row"/>

        <View
            style="@style/XYLine"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_pro_coupon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/iv_mine_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_mine_coupon"/>

        <TextView
            android:id="@+id/tv_mine_coupon"
            style="@style/RegularTextView"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:text="优惠券"/>

        <TextView
            android:id="@+id/tv_mine_coupon_hint"
            style="@style/NormalHintTextView"
            android:layout_below="@id/tv_mine_coupon"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:text="优惠券使用情况"/>

        <TextView
            android:id="@+id/tv_mine_coupon_num"
            style="@style/NormalTextView"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:textColor="@color/tv_hint"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_row"/>

        <View
            style="@style/XYLine"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_pro_redpacke"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/iv_mine_redpacke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_mine_redpacke"/>

        <TextView
            android:id="@+id/tv_mine_redpacke"
            style="@style/RegularTextView"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:text="红包"/>

        <TextView
            android:id="@+id/tv_mine_redpacke_hint"
            style="@style/NormalHintTextView"
            android:layout_below="@id/tv_mine_redpacke"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:text="红包使用情况"/>

        <TextView
            android:id="@+id/tv_mine_redpacke_num"
            style="@style/NormalTextView"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:textColor="@color/tv_hint"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_row"/>

        <View
            style="@style/XYLine"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_pro_credit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/iv_mine_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_mine_credit"/>


        <TextView
            android:id="@+id/tv_mine_credit"
            style="@style/RegularTextView"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:text="会员积分"/>

        <TextView
            android:id="@+id/tv_mine_credit_hint"
            style="@style/NormalHintTextView"
            android:layout_below="@id/tv_mine_credit"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:text="会员积分获取及消费日志"/>

        <TextView
            android:id="@+id/tv_mine_credit_num"
            style="@style/NormalTextView"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:textColor="@color/tv_hint"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_row"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"/>
</LinearLayout>